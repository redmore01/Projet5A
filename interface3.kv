#:kivy 1.4
#:import KivyLexer kivy.extras.highlight.KivyLexer


<ScatterWithImage>:
	src: "softboy.png"
	Image:
		size: root.size
		stretch: True
		source: root.src




<Catalog>:
    screen:screen
	list:list
	BoxLayout:
		
		
		
		orientation: 'vertical'
		
		
		BoxLayout:
			padding: '2sp'
			
			canvas:
				Color:
					rgba: 1, 1, 1, .6
				Rectangle:
					size: self.size
					pos: self.pos
			size_hint: 1, None
			height: '45sp'
			BoxLayout:
				width: '645sp'
				size_hint: None, 1
				
		

				

		BoxLayout:
			id: screen
			padding: '2sp'
			orientation: "vertical"

		BoxLayout:
			padding: '2sp'
			canvas:
				Color:
					rgba: 1, 1, 1, .6
				Rectangle:
					size: self.size
					pos: self.pos
			size_hint: 1, None
			height: '45sp'
			Button:
				text: 'Retour'
				size_hint: None, 1
				width: '250sp'
				on_press: root.backtointerface1()
			Button:
				text: 'Option 1'
				size_hint: None, 1
				width: '250sp'
			Button:
				text: 'Option 2'
				size_hint: None, 1
				width: '250sp'
			Button:
				text: 'Enregistrer'
				size_hint: None, 1
				width: '250sp'
				on_press: root.change_screen()
				
	
					
				
			   
	
