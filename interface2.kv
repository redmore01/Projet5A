#:kivy 1.4
#:import KivyLexer kivy.extras.highlight.KivyLexer


<ScatterWithImage>:
	src: "softboy.png"
	Image:
		size: root.size
		stretch: True
		source: root.src

<GridWithCanvas>:
	listtry: listtry
	id: listtry
	cols: 1
	spacing: 5
    canvas:
		Color:
			rgba: 1, 1, 1, .6
		Rectangle:
			size: self.size
			pos: self.pos
		
<ToggleWithImage>:
	src: "softboy.png"

	Image:
		size: root.size
		y: root.y
		x: root.x
		stretch: True
		source: root.src
		
		



<BoxDisc>:
	padding: '2sp'
		
	canvas:
		Color:
			rgba: 1, 1, 1, .6
		Rectangle:
			size: self.size
			pos: self.pos
	size_hint: 1, None
	height: '45sp'
	BoxLayout:
		width: '800sp'
		size_hint: None, 1
